{
  "name": "kenai-npm-starter-kit",
  "version": "1.0.0",
  "description": "Kit de inicio para desarrollo frontend basado en componentes (Pug, Sass y JS)  y automatizado con Scripts NPM",
  "main": "package.json",
  "scripts": {
    "sass": "node-sass -w --importer node_modules/node-sass-package-importer/dist/cli.js -o ./public/assets/css/ ./src/scss/",
    "pug": "pug -w -P -p ./src/pug/includes/ ./src/pug/pages/ -o ./public/",
    "babel": "babel -w ./src/js/ -d /public/assets/js",
    "browserify": "browserify ./src/js/index.js -d -o ./public/assets/js/script.js -t [ babelify --presets [ env ] ]",
    "watchify": "watchify ./src/js/index.js -d -o ./public/assets/js/script.js -t [ babelify --presets [ env ] ] -v",
    "serve": "browser-sync start --server --files public --serveStatic public --reload-delay=300 --reload-debounce=500",
    "proxy": "browser-sync start --proxy localhost --files public --directory --startPath / --serveStatic / --reload-delay=300 --reload-debounce=500",
    "metalangs": "parallelshell \"npm run sass\" \"npm run pug\" \"npm run watchify\"",
    "devserve": "parallelshell \"npm run metalangs\" \"npm run serve\"",
    "devproxy": "parallelshell \"npm run metalangs\" \"npm run proxy\"",
    "clean": "rimraf \"./public/**\" && mkdirp ./public/img && touch ./public/index.html ./public/assets/js/script.js ./public/assets/css/style.css",
    "min.html": "pug -p ./src/pug/includes/ ./src/pug/pages/ -o ./public/",
    "min.js": "npm run browserify && uglifyjs ./public/assets/js/script.js -c -o ./public/assets/js/script.js",
    "uncss": "uncss -u uncss.json \"./public/**.html\" > ./public/assets/css/style.un.css",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers \"> 5%, ie 10\" -r ./public/assets/css/style.un.css",
    "min.css": "node-sass --output-style compressed ./public/assets/css/style.un.css ./public/assets/css/style.css",
    "min": "npm run min.html && npm run min.js && npm run uncss && npm run autoprefixer &&  npm run min.css && rimraf ./public/assets/css/style.un.css",
    "build": "npm run min && npm run serve",
    "start": "npm run devserve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonmircha/kenai-npm-starter-kit.git"
  },
  "keywords": [
    "jonmircha",
    "kenai devtools",
    "devtools",
    "starter kit",
    "npm",
    "npm scripts",
    "web components"
  ],
  "author": "Jonathan MirCha <jonmircha@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jonmircha/kenai-npm-starter-kit/issues"
  },
  "homepage": "https://github.com/jonmircha/kenai-npm-starter-kit#readme",
  "devDependencies": {
    "autoprefixer": "^7.0.0",
    "babel-cli": "^6.24.0",
    "babel-preset-env": "^1.3.2",
    "babelify": "^7.3.0",
    "browser-sync": "^2.27.10",
    "browserify": "^14.3.0",
    "copy": "^0.3.0",
    "imagemin": "^5.2.2",
    "imagemin-cli": "^3.0.0",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-pngquant": "^5.0.0",
    "imagemin-svgo": "^5.2.1",
    "imagemin-webp": "^4.0.0",
    "mkdirp": "^0.5.1",
    "node-sass-package-importer": "^3.0.4",
    "parallelshell": "^3.0.1",
    "postcss-cli": "^3.2.0",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "uglify-js": "^3.0.0",
    "uncss": "^0.14.1",
    "watchify": "^3.9.0"
  }
}
